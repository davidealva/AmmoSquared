<div class="container">
  <div class="row">
    <div class="col-md-12" style="margin-top:100px">
      <h1>Orders</h1>

      <table class="table">
        <thead>
          <tr>
            <th>User ID</th>
            <th>User Email</th>
            <th>Subtotal</th>
            <th>Bullet weight</th>
            <th>Total</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.user_id %></td>
              <td><%= order.user.email %></td>
              <td><%= order.subtotal %></td>
              <td><%= order.total %></td>
              <td><%= link_to 'Show', order %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
