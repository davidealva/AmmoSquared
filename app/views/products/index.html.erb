<div class="container">
  <div class="row">
    <div class="col-md-12" style="margin-top:100px">

      <h1>Products</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Caliber</th>
            <th>Grade</th>
            <th>Bullet weight</th>
            <th>Cost per</th>
            <th>Price per</th>
            <th>Rounds box</th>
            <th>Description</th>
            <th>Weight per</th>
            <th>Brand</th>
            <th>Sku</th>
            <th>Quantity avail</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.caliber %></td>
              <td><%= product.grade %></td>
              <td><%= product.bullet_weight %></td>
              <td><%= product.cost_per %></td>
              <td><%= product.price_per %></td>
              <td><%= product.rounds_box %></td>
              <td><%= product.description %></td>
              <td><%= product.weight_per %></td>
              <td><%= product.brand %></td>
              <td><%= product.sku %></td>
              <td><%= product.quantity_avail %></td>
              <td><%= link_to 'Show', product %></td>
              <td><%= link_to 'Edit', edit_product_path(product) %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Product', new_product_path %>
    </div>
  </div>
</div>
