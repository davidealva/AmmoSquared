<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Caliber</th>
      <th>Grade</th>
      <th>Bullet weight</th>
      <th>Price per</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |item| %>
      <tr>
        <td><%= item.product.brand %></td>
        <td><%= item.product.caliber %></td>
        <td><%= item.product.grade.humanize %></td>
        <td><%= item.product.bullet_weight %></td>
        <td><%= item.product.price_per_round %></td>
        <td><%= item.product.description %></td>
        <td><%= link_to 'Destroy', delete_path(item.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>
