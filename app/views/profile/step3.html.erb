<div class="container">
  <div class="row">
    <header>
      <h1 class="text-center">Start Accumulating</h1>
      <div class="timeline text-center">
        <hr>
        <div class="step-image">
          <h4>Step 1</h4>
        </div>
        <div class="step-image">
          <h4>Step 2</h4>
        </div>
        <div class="step-image step-active">
          <h4>Step 3</h4>
        </div>
      </div>
    </header>
  </div>

  <div id="profileBody" class="row">
    <div id="leftside" class="col-md-4">
      <div class="row">
        
      <form class="form-horizontal">
      <fieldset>

      <!-- Form Name -->
      <h3>Personal Details:</h3>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-12">
        <input id="" name="" type="text" placeholder="First Name" class="form-control input-md">

        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-12">
        <input id="lastname" name="lastname" type="text" placeholder="Last Name" class="form-control input-md">

        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
          <label class="col-md-12 control-label" for="address">Shipping Address</label>
        <div class="col-md-12">
        <input id="address" name="address" type="text" placeholder="Address" class="form-control input-md">
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-12">
        <input id="address2" name="address2" type="text" placeholder="Address 2" class="form-control input-md">
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-12">
        <input id="city" name="city" type="text" placeholder="City" class="form-control input-md">
        </div>
      </div>

      <!-- Select Basic -->
      <div class="form-group">
        <div class="col-md-6">
          <select id="state" name="state" class="form-control">
            <option value="1">State</option>
            <option value="2">Idaho</option>
          </select>
        </div>
        <div class="col-md-6">
        <input id="zip" name="zip" type="text" placeholder="Zip Code" class="form-control input-md">

        </div>
      </div>

      <!-- File Button -->
      <div class="form-group">
        <label class="col-md-6 control-label" for="idbutton">Upload copy of your I.D.</label>
        <div class="col-md-6">
          <input id="idbutton" name="idbutton" class="input-file" type="file">
        </div>
      </div>

      <!-- Multiple Checkboxes -->
      <div class="form-group">
        <div class="col-md-12">
        <div class="checkbox">
          <label for="billingsame-0">
            <input type="checkbox" name="billingsame" id="billingsame-0" value="1">
            Billing address same as shipping?
          </label>
      	</div>
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-12 control-label" for="billingaddress">Billing Address</label>
        <div class="col-md-12">
        <input id="billingaddress" name="billingaddress" type="text" placeholder="Address" class="form-control input-md">

        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-12">
        <input id="billingaddress2" name="billingaddress2" type="text" placeholder="Address 2" class="form-control input-md">
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-12">
        <input id="billingcity" name="billingcity" type="text" placeholder="City" class="form-control input-md">
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-6">
          <select id="billingstate" name="billingstate" class="form-control">
            <option value="1">State</option>
            <option value="2">Idaho</option>
          </select>
        </div>
        <div class="col-md-6">
        <input id="billingzip" name="billingzip" type="text" placeholder="Zip Code" class="form-control input-md">
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-12 control-label" for="creditnumber">Credit Card </label>
        <div class="col-md-12">
        <input id="creditnumber" name="creditnumber" type="text" placeholder="Credit card number" class="form-control input-md">
        </div>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <div class="col-md-6">
        <input id="expiredate" name="expiredate" type="text" placeholder="Expiration" class="form-control input-md">
        <span class="help-block">xx/xx</span>
        </div>
        <div class="col-md-6">
        <input id="ccv" name="ccv" type="text" placeholder="CCV" class="form-control input-md">
        <span class="help-block">xxx</span>
        </div>
      </div>

      </fieldset>
      </form>
      </div>
    </div>
    <div id="rightside" class="col-md-7 col-md-offset-1">
      <div class="tablewrap">
        <h3>Your monthly accumulation:</h3>
        <table class="table">
          <thead>
            <tr>
              <th>Product</th>
              <th># per Month</th>
              <th>Est Weight</th>
              <th>Monthly Contribution</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>9mm Value 115gr</td>
              <td>8.65</td>
              <td>.63 lb</td>
              <td>{ amount }</td>
              <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
            </tr>
            <tr>
              <td>5.56 Service 55gr</td>
              <td>50.65</td>
              <td>.70 lb</td>
              <td>{ amount }</td>
              <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
            </tr>
            <tr>
              <td>.22 Value 36gr</td>
              <td>102.22</td>
              <td>2.53 lb</td>
              <td>{ amount }</td>
              <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="orderdetails">
        <ul>
          <li>
            <div class="form-group row">
              <label class="col-md-9 control-label" for="delivery"><h3>I would like delivery every:</h3></label>
              <div class="col-md-3">
                <select id="delivery" name="delivery" class="form-control">
                  <option value="0"># of months</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8">8</option>
                  <option value="9">9</option>
                  <option value="10">10</option>
                  <option value="11">11</option>
                  <option value="12">12</option>
                </select>
              </div>
            </div>
          </li>
          <li><h3>Estimated monthly shipping to: { zipcode }</h3></li>
          <li><h3>Estimated monthly contribution: { contribution total }</h3></li>
          <li></li>
        </ul>
      </div>
      <div class="form-group">
        <div class="col-md-12">
        <div class="checkbox">
          <label for="terms-0">
            <input type="checkbox" name="terms" id="terms-0" value="1">
            I agree to the terms and conditions
          </label>
        </div>
        </div>
      </div>
      <div class="cta col-md-12">
        <h3 class="pull-left">Submit to start your subscription now</h3>
        <%= link_to 'SUBMIT', profile_path(current_user), class: 'btn btn-danger pull-right' %>
      </div>
    </div>
  </div>
</div>
<footer>
</footer>
