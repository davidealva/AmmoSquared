<div class="container">
  <div class="row">
    <div class="col-md-12" style="margin-top:100px">

      <h1>Subscriptions</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Caliber</th>
            <th>Grade</th>
            <th>Weight range</th>
            <th>Amount</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @subscriptions.each do |subscription| %>
            <tr>
              <td><%= subscription.caliber %></td>
              <td><%= subscription.grade %></td>
              <td><%= subscription.weight_range %></td>
              <td><%= subscription.amount %></td>
              <td><%= link_to 'Show', subscription %></td>
              <td><%= link_to 'Edit', edit_subscription_path(subscription) %></td>
              <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Subscription', new_subscription_path %>
    </div>
  </div>
</div>
